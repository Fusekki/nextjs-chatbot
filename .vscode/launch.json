  {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: Debug Server Side",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      },
      {
        "name": "Next.js: Debug Client Side",
        "type": "chrome", // or "msedge" for Microsoft Edge
        "request": "launch",
        "url": "http://localhost:3000", // Adjust port if necessary
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "preLaunchTask": "npm: dev" // Ensure your dev server is running
      }
    ]
  }